//  This page will show a tabbed view of the dictionary.
//  Clicking on the tab will bring up all the words for that letter
  
#tabdiv
  %ul
    - ('a'..'z').each do |letter|
      %li{:id => "#{letter}"}
        = link_to "#{letter.upcase}", {:action => 'show_words', :letter => "#{letter}"}, :remote => true
        

      
:javascript
  $(function(){
    $("#tabdiv").tabs({
      error: function( xhr, status, index, anchor) {
        $(anchor.hash).html(
          "Couldn't load this tab.")
      }
    });
  });

    

  
      